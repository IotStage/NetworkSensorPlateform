{% extends 'template.html.twig' %}

{% block body%}
<div class="row">{% include 'nav.html.twig' %}<br><br><br></div>
{% block content %}
<div class="row">
    {% include "menu.graph.html.twig"  with {'id': 1 }%}
    {% for key, cou in  graph %}
        <div class="col-md-4">
            {% include 'graph.panel.twig' with {'id': key, "title":"temps reel", "nom":cou.nom } %}

        </div>
    {% endfor %}


</div>


{% endblock %}

{% block chart %}
    {% for key, courbe in  graph %}

        <script type="text/javascript">
            var dd =new Date();
            var points = [];

            var init_day = 0;

            var frequence = 20*1000;

            var sInt;//instance setInterval
            getPlage();

            var chart_{{ courbe.nom }} = new Highcharts.chart('graph{{ courbe.id }}', {
                chart: {
                    type: 'line',
                    zoomType: 'x'
                },
                title: {
                    text: '{{ courbe.title }}'
                },
                subtitle: {
                    text: document.ontouchstart === undefined ?
                        'cliquez et glissez pour zoomer' : 'cliquez pour dezoomer'
                },
                tooltip: {
                    formatter: function () {
                        return '<b>' + this.series.name + '</b><br/>' +
                            Highcharts.numberFormat(this.y, 2) + " {{ courbe.unite }}<br/>"+
                            Highcharts.dateFormat('prise le %d-%m-%Y Ã  %H:%M:%S', this.x);
                    }
                },
                xAxis: {
                    type: 'datetime',
                    //tickInterval: 3600 * 1000
                    dateTimeLabelFormats: {
                        hour: '%a %d %b'    //ex- 01 Jan 2016

                    }
                    //categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']

                },
                yAxis: {
                    title: {
                        text: 'Valeurs {{ courbe.nom }} en {{ courbe.unite }}'
                    }
                },
                plotOptions: {
                    area: {
                        fillColor: {
                            linearGradient: {
                                x1: 0,
                                y1: 0,
                                x2: 0,
                                y2: 1
                            },
                            stops: [
                                [0, Highcharts.getOptions().colors[0]],
                                [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                            ]
                        },
                        marker: {
                            radius: 2
                        },
                        lineWidth: 1,
                        states: {
                            hover: {
                                lineWidth: 1
                            }
                        },
                        threshold: null
                    }
                },
                series: [{
                    name: '{{ courbe.nom }}',
                    type: "area",
                    data: []

                }]
            });

            requestData();

            function requestData() {
                console.log("get data");
                //nouveau jour
                if((new Date()).getDate() != dd.getDate()){
                    dd = new Date();
                    init_day = 0;
                }

                $.ajax({
                    type: "POST",
                    url: '{{ path_for("reelTimeDataSensor") }}',
                    data: {
                        "sensor" : "{{ courbe.nom }}"
                    },
                    timeout: 1000,
                    success: function(data) {
                        data = JSON.parse(data);
                        console.log("les donnees  sont ");
                        console.log(data);
                        var ii = 0;
                        var points = [];
                        for(ii=0; ii<data.length; ii++) {

                            var date_heure = data[ii].heure.split(":");
                            var date_date = data[ii].datte.split("-");
                            var x = (new Date(
                                parseInt(date_date[0]),
                                parseInt(date_date[1])-1,
                                parseInt(date_date[2]),
                                parseInt(date_heure[0]),
                                parseInt(date_heure[1]),
                                parseInt(date_heure[2]))).getTime();
                            points.push([x, Math.abs(parseFloat(data[ii].data))]);
                        }
                        chart_{{ courbe.nom }}.series[0].setData(points);
                    },
                    cache: false
                });


                console.log("init day:"+init_day);

                if(init_day == 0){
                    init_day = 1;
                    sInt = setInterval(requestData,frequence); //chaque 30s*/
                }
            }
            function getPlage(){
                points = [];
                var inc_heure=11, inc_minute=0, inc_seconde=0;
                for(inc_heure=11; inc_heure<16; inc_heure++){
                    for(inc_minute=0; inc_minute<60; inc_minute++){
                        for(inc_seconde=0; inc_seconde<60; inc_seconde+=30){
                            var temps = (new Date(dd.getFullYear(), dd.getMonth(), dd.getDate(), inc_heure, inc_minute, inc_seconde)).getTime();
                            points.push([temps,0]);
                        }
                    }
                }
            }
        </script>
    {% endfor%}
{% endblock %}
{% block highchart %}
    <script type="text/javascript" src="{{ base_url() }}/public/dist/js/highcharts.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/public/dist/js/modules/exporting.js"></script>
{% endblock %}
{% endblock %}



